<div class="container">
  <div class="text-center">
    <h1>Pedalo</h1>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "Adresse email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "Mot de passe" } %>
      <%= f.input :remember_me, as: :boolean  %>

      <div>
        <%= f.button :submit, "Se connecter", class: "btn-model-sign-in" %>
      </div>
    </div>
  <% end %>
  <div class="links_sign_in">
    <%= render "devise/shared/links" %>
  </div>
</div>
