<div class="form-container">
  <div class="form-login">
    <div class="text-center">
      <h3>Fini de courser vos coursiers ! ğŸš²</h3>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Adresse email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "Mot de passe" } %>
    <%= f.input :remember_me, as: :boolean  %>
      <%= f.button :submit, "Se connecter", class: "btn-model-sign-in" %>
    <% end %>
    <div class="links_sign_in">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
