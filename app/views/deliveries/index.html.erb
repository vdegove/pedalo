<div class="container">
  <div class="tabs">
    <%= link_to "Passées", past_deliveries_path, class: "tab" %>
    <%= link_to "Aujourd'hui", today_deliveries_path, class: "tab" %>
    <%= link_to "A venir", upcoming_deliveries_path, class: "tab" %>
    <%= link_to "Tout voir", deliveries_path, class: "tab active" %>
  </div>
  <div class="row">
    <div class="col-sm-3" style="background-color: grey">Nom</div>
    <div class="col-sm-3" style="background-color: grey">Date de livraison</div>
    <div class="col-sm-3" style="background-color: grey">Créneau de livraison</div>
    <div class="col-sm-3" style="background-color: grey">Status</div>
    <% @deliveries.each do |delivery| %>
      <div class="col-sm-3">ID : <%= delivery.id %></div>
      <div class="col-sm-3"><%= delivery.complete_after.to_date %></div>
      <div class="col-sm-3"><%= delivery.complete_before %></div>
      <div class="col-sm-3">Status : <%= delivery.status? %></div>
    <% end %>
  </div>
</div>
