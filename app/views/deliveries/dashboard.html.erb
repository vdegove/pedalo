  <!-- Datas -->
    <% total = @deliveries.today.count %>
    <% delivered = @deliveries.today.delivered.count %>
    <% not_delivered =  @deliveries.today.not_delivered.count %>
    <% enregistred = @deliveries.today.enregistred.count%>
    <% in_process = @deliveries.today.in_process.count %>
    <% delayed = @deliveries.today.important.count %>
  <!-- --- -->
<div class="main-card-container">
    <div class="orders">Bonjour, Brasserie Tout Schuss.</div>
    <div class="undertitle-dashboard">Aujourd'hui, sur votre espace Pedalo :</div>
  <div class="card-container">
    <div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1000">
      <div class="dashboard-card">
        <h3><%= total %></h3> <p>livraisons sont prévues.</p>
      </div>
    </div>
    <div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1250">
      <div class="dashboard-card">
        <h3><%= delivered %></h3> <p>livraisons ont été effectuées.</p>
      </div>
    </div>
    <div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500">
      <div class="dashboard-card">
        <h3><%= not_delivered %></h3> <p>livraisons sont à venir,</p>dont <strong><%= in_process %></strong>   en cours ...
      </div>
    </div>

    <div data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1750">
      <div class="dashboard-card" id="gauge">
        <canvas id="myChart" width="300" height="300" data-delivered="<%= delivered %>" data-delayed="<%= delayed %>" data-enregistred="<%= enregistred %>" data-in_process="<%= in_process %>"></canvas>
      </div>
    </div>
  </div>
  <div class="card-title-container"><h3>Vos livraisons à venir :</h3></div>
  <div class="upcoming-container">
    <%= render "upcomingtable", deliveries: @deliveries.upcoming %>
  </div>
</div>




