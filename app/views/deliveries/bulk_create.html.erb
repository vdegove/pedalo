<div class="container-show">
  <ul>
  <h1><%= @count %> livraisons importées !</h1>
  <% @deliveries.each do |delivery| %>

    <%= simple_form_for delivery, wrapper: :inline_form, html: { class: 'form-inline delivery-form-line' } do |f| %>
      <%= f.input :recipient_name, input_html: { size: '16' }  %>
      <%= f.input :address, input_html: { size: '24' } %>
      <%#= f.input :date, as: :date, label: false %>
      <div class="bulk-date-check">le <strong><%= delivery.date.strftime("%d/%m/%y") %></strong> entre</div>
      <%= f.input :complete_after, as: :time, label: false, input_html: {style: "width: 60px;"} %> et
      <%= f.input :complete_before, as: :time, label: false, input_html: {style: "width: 60px;"} %>
      <div class="packages-summary">
        <% if delivery.delivery_packages.blank? %>
          Pas de contenu de commande
        <% else %>
          <%= sanitize delivery.delivery_packages.map{ |delivery_package| "#{delivery_package.amount} #{delivery_package.package_type.name.downcase}"}.join("<br>") %>
        <% end %>
      </div>
      <div class="modal fade" id="modal2-<%= delivery.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">

              <%= simple_form_for delivery, remote: true, wrapper: :inline_form, html: { class: 'form-inline delivery-form-line' } do |f| %>
                    <%= f.input :recipient_name, input_html: { size: '16' }  %>
                    <%= f.input :address, input_html: { size: '24' } %>
                    <%#= f.input :date, as: :date, label: false %>
                    <div class="bulk-date-check">le <strong><%= delivery.date.strftime("%d/%m/%y") %></strong> entre</div>
                    <%= f.input :complete_after, as: :time, label: false, input_html: {style: "width: 60px;"} %> et
                    <%= f.input :complete_before, as: :time, label: false, input_html: {style: "width: 60px;"} %>
                    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
              <% end %>


            </div>
          </div>
        </div>
      </div>
    </ul>
  <div class="packages-summary", id="package-amount-<%= delivery.id %>">
        <%= render 'delivery_details', delivery: delivery %>
       <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-<%= delivery.id %>">
        Modifier
      </button>
    <%= render 'edit', delivery: delivery %>
  </div>
  </div>

  <% end %>
  <%= link_to "valider", root_path %>
</div>
</div>

